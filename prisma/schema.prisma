datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String

  // Relations (both required)
  roleId      Int
  role        Role      @relation(fields: [roleId], references: [id])

  userGroupId Int
  userGroup   UserGroup @relation(fields: [userGroupId], references: [id])
  
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model UserGroup {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model db_models {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  schema    String   // e.g. JSON definition of the model
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
